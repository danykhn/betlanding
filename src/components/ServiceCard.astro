---
interface Props {
  icon: string;
  title: string;
  description: string;
  features?: string[];
  delay?: number;
  animationType?: number;
}

const { icon, title, description, features, delay = 0, animationType = 0 } = Astro.props;

// Diferentes tipos de animaciones TAOS para variedad
const animations = [
  'taos:translate-y-[200px] taos:opacity-0',           // Slide up
  'taos:-translate-y-[200px] taos:opacity-0',          // Slide down
  'taos:-translate-x-[200px] taos:opacity-0',          // Slide right
  'taos:translate-x-[200px] taos:opacity-0',           // Slide left
  'taos:scale-[0.6] taos:opacity-0',                   // Zoom in
  'taos:[transform:rotateY(180deg)] taos:opacity-0'    // Flip
];

const selectedAnimation = animations[animationType % animations.length];
---

<div 
  class={`service-card group bg-gradient-to-br from-slate-800/50 to-slate-900/50 backdrop-blur-sm rounded-2xl p-8 border border-slate-700 hover:border-purple-500 transition-all duration-1000 transform hover:-translate-y-2 hover:shadow-2xl hover:shadow-purple-500/20 ${selectedAnimation}`}
  data-taos-offset="300"
  data-taos-delay={delay * 150}
>
  <div class="text-6xl mb-6 transform group-hover:scale-110 transition-transform duration-300">
    {icon}
  </div>
  
  <h3 class="text-2xl font-bold mb-4 bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
    {title}
  </h3>
  
  <p class="text-gray-300 mb-6 leading-relaxed">
    {description}
  </p>
  
  {features && features.length > 0 && (
    <ul class="space-y-3">
      {features.map((feature) => (
        <li class="flex items-center text-gray-400">
          <svg class="w-5 h-5 mr-3 text-purple-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          {feature}
        </li>
      ))}
    </ul>
  )}
  
  <div class="mt-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
    <div class="h-1 w-full bg-gradient-to-r from-purple-500 to-pink-500 rounded-full"></div>
  </div>
</div>

<style>
  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .service-card {
    animation: slideInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .service-card.visible {
    animation: slideInUp 0.6s ease-out forwards;
  }
</style>
