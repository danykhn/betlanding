---
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title = 'Betfounding - Tu llave de éxito al mundo del igaming' } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Software de casino online innovador con casino en vivo, apuestas deportivas, slots y más. Soluciones llave en mano y whitelabel." />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
	</head>
	<body class="font-poppins bg-slate-950 text-white antialiased overflow-x-hidden">
		<slot />
		<script>
			// Sistema de animaciones scroll personalizado
			document.addEventListener('DOMContentLoaded', () => {
				const animatedElements = document.querySelectorAll('[class*="taos:"]');
				
				const observerOptions = {
					threshold: 0.1,
					rootMargin: '0px 0px -100px 0px'
				};
				
				const observer = new IntersectionObserver((entries) => {
					entries.forEach(entry => {
						if (entry.isIntersecting) {
							const element = entry.target as HTMLElement;
							const delay = parseInt(element.getAttribute('data-taos-delay') || '0');
							
							setTimeout(() => {
								element.classList.add('taos-animated');
							}, delay);
							
							observer.unobserve(element);
						}
					});
				}, observerOptions);
				
				animatedElements.forEach(element => {
					observer.observe(element);
				});
			});
		</script>
		<script is:inline>
			document.documentElement.classList.add('js');
		</script>
	</body>
</html>
